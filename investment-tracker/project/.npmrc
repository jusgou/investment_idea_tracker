# Enable strict package management
strict-peer-dependencies = true

# Enable package-lock
package-lock = true

# Set default registry
registry = https://registry.npmjs.org

# Enable audit
audit = true

# Set log level
loglevel = warn

# Enable save-exact for consistent versions
save-exact = true

# Enable package-lock-only for faster installs
package-lock-only = true

# Set default node version
node-version = lts/*

# Enable auto-install peer dependencies
auto-install-peers = true

# Set cache location
@cache = ~/.npm

# Enable offline mode when possible
offline = false

# Enable progress bar
progress = true
